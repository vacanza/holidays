    "software-terms",
    "tr-tr",
    "uk-ua",
    "vi-vn",
    "custom-dict"
  ],
  "enabled": true,
  "files": ["**/*"],
  "ignorePaths": [
    "node_modules/**",
    ".git/**",
    ".venv/**",
    "__pycache__/**",
    "*.pyc",
    "dist/**",
    "build/**",
    ".mypy_cache/**",
    ".pytest_cache/**",
    "docs/_build/**",
    "snapshots/**",
    "*.egg-info/**",
    ".tox/**",
    "requirements/*.txt",
    "cspell/dictionaries/**"
  ],
  "ignoreRegExpList": [
    "#\\w+",
    "<@\\w+>",
    "\\b[A-Z]{2,}\\b",
    "\\b[A-Z][a-z]+\\s+[A-Z][a-z]+\\b",
    "\\b\\d+\\b",
    "\\b[A-Za-z]+_[A-Za-z]+\\b",
    "\\bhttps?:\\/\\/[^\\s]+\\b"
  ],

  "useGitignore": true
}
